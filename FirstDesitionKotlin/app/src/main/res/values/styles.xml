<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:elevation">0dp</item>-->
        <item name="android:windowBackground">@color/orange</item>

        <item name="android:textColor">@color/brown</item>
        <item name="android:textColorPrimary">@color/brown</item>


        <!--<item name="android:actionModeBackground">@drawable/dummy_pig</item>-->
        <!--<item name="actionModeBackground">@drawable/dummy_pig</item>-->

        <!-- ACTIONBAR-->

        <item name="android:actionBarSize">64dp</item>
        <item name="android:actionBarItemBackground">@null</item>
        <item name="android:actionButtonStyle">@null</item>
        <item name="actionBarItemBackground">@null</item>
        <item name="actionBarSize">64dp</item>
        <item name="actionButtonStyle">@null</item>


        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>

        <!-- POPUPMENU-->
        <item name="actionOverflowMenuStyle">@style/MyPopupMenu</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearancePopup</item>

    </style>

    <style name="AppBubbles" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:popupBackground">@color/orange</item>


    </style>
    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearancePopup">
        <!--<item name="android:textColor">@color/cherry_red</item>-->
        <item name="android:textSize">24dp</item>
    </style>


    <style name="AppAddDialog" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


